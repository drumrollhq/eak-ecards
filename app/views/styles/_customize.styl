.customize-container
  background-color bgColor
  position absolute
  top 0
  left 0
  width 100%
  height 100%
  margin 0

.customize-header
  color white
  line-height 50px
  margin 0
  padding 0

  h4
    font-family brandFont
    font-weight normal

.customize-header-inner
  transition all viewTransitionDuration ease

  .show-preview &
    transform translateX(-100%)

.customize-header-customize, .customize-header-preview
  width 100%
  position absolute
  h4, .button
    position absolute
  h4
    margin 0

.customize-header-customize
  top 0
  left 0
  h4
    left 15px

.customize-header-preview
  top 0
  left 100%
  h4
    right 15px

.customize-header-preview-button
  right 15px

.customize-header-customize-button,
.customize-header-back-button
  left 15px

.customize-content-container
  position fixed
  top 50px
  left 0
  bottom 0
  width 100%

.customize-content-inner
  position absolute
  width 100%
  top 0
  bottom 0
  transition all viewTransitionDuration ease

  .show-preview &
    transform translateX(-100%)

.customize-pane,
.preview-pane
  overflow auto
  position absolute
  width 100%
  top 0
  left 0
  bottom 0

.customize-pane h3
  margin-bottom 5px
  padding-left 15px

.customize-instructions
  padding 15px
  background-color #F7F4DE

  p
    margin 0
    margin-top 15px

    &:nth-of-type(1)
      margin-top 0

.customize-instructions-dismiss
  display block
  cursor pointer
  float right
  padding-left 15px
  padding-bottom 10px

.preview-pane
  left 100%

.preview-frame
  position absolute
  top 0
  left 0
  width 100%
  height 100%
  border none
  background white

@media screen and (min-width: 700px)
  .show-mobile
    display none

  .customize-header-preview-button,
  .customize-header-customize-button
    display none

  .customize-header-customize,
  .customize-header-preview,
  .customize-pane,
  .preview-pane
    width 50%

  .customize-header-preview,
  .preview-pane
    left 50%

  .show-preview .customize-content-inner,
  .show-preview .customize-header-inner
    transform translateX(0)
