header
  margin 30px
  text-align center

.header-cont
  max-width 1340px
  margin auto
  padding-top 30px

.eak-header
  img
    max-width 150px
    display block
    margin auto
    margin-bottom 30px
    border none

.step-header
  h2
    margin 0

  h3
    margin 0
    font-family font
    font-weight 300

.fixed-header
  background-color eakPurple
  position fixed
  top 0
  left 0
  width 100%
  height 50px

  button, .button
    border none
    background none
    font-family font
    color white
    font-weight 300
    font-size 1.2em
    line-height inherit
    text-decoration none

@media screen and (min-width: 550px)
  .eak-header
    float right

  .app-header
    float left
    margin-bottom 0

  .step-header
    clear left
    float left
    text-align left
    margin-top 0
